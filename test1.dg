game test;

statblock {
    hp = 1;
    mp = 2;
}

player me {
    stats {
        hp = 100;
    }
    alive = hp > 95;
    action test_action {
        source.hp = source.hp - 1;
    }
    trigger test_trigger on (c or not d) {}
}

enemy test_enemy() {
    stats {
        mp = 1;
    }
    alive = 1;
    action test_action {}
    trigger test_trigger on (c or not d) {}

    behaviour {
        hp < 5 = heal self;
        default = test_action player;
    }
}

item test_item<weapon>(dmg) {
    action attack {
        target.hp = target.hp - dmg;
    }
}

room start {
    enemies {}
    items {
        t1 = test_item(1d6);
    }
    doors {
        door1 to test_room2;
    }
}

room test_room2 {
    enemies {
        e1 = test_enemy();
    }
    items {
        test1 = test_item();
        test2 = test_item();
    }
    doors {
        door2 to test_room1 requires(key);
        red_door to test_room2 requires(red_key);
    }
}
